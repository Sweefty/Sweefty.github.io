{{#config}}
	
	{
		"title" : "Temply",
		"description" : "The Static HTML Creator"
	}

{{/config}}

{{> header}}

<div class="container">
	
	<div class="intro row">
		<div class="column grid-12">
			<div class="block">
				<div class="top-sep"></div>

				<div class="splash">
					<h1>Temply</h1>
					<h2>Fast Way To Create Static HTML Templates</h2>
					<div class="buttons">
						<a href="https://github.com/Sweefty/Temply" class="button large red">Fork Me</a>
						<a href="https://github.com/Sweefty/Temply/archive/master.zip" class="button large red">Download</a>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="section">
		<div class="row">
			<div class="column grid-12">
				<div class="block code">
					<pre><code class="sh">$ npm install temply -g</code></pre>
				</div>
			</div>
		</div>
	</div>

	{{> footer}}
	
</div>
