{{#config}}
	
	{
		"title" : "crazy ideas for web pages",
		"description" : "hand picked list of some crazy ideas for your web design inspiration",
		"keywords" : "crazy, web, designs",
	}

{{/config}}

{{> header}}

<div class="container">
	
	<div class="intro row">
		<div class="column grid-12">
			<div class="block">
				<div class="top-sep"></div>

				<div class="splash">
					<h1>Awesome</h1>
					<h2>list of some awesome css frameworks</h2>
				</div>
			</div>
		</div>
	</div>

	<div class="section">
		<div class="row">
			{{#inspiration 'inspiration/crazy-idea.json'}}
				{{#each items}}
				<div class="column grid-6">
					<div class="block temp" style="">
						<img alt="{{this.name}}" src="{{../list.IMGbase}}/{{this.name}}.jpg">

						<div class="buttons" style="overflow:hidden;">
							<div style="float:left">
								{{#if this.desc}}
									{{this.desc}}
								{{else}}
									{{this.name}}
								{{/if}}
							</div>
							<div style="float:right;"><a href="{{this.url}}" target="_blank" title="{{this.name}} website" class="button small red">Visit Website</a></div>
						</div>
					</div>
				</div>
				{{/each}}
			{{/inspiration}}
		</div>
	</div>

	{{> footer}}
</div>
