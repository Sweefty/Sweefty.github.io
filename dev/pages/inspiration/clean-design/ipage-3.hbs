{{#config}}
	
	{
		"title" : "Clean web design ideas for your inspiration",
		"description" : "hand picked list of clean web designs for inspiration",
		"keywords" : "clean design, webpage ideas, design inspiration, web design",
	}

{{/config}}

{{> header}}

<div class="container">
	<div class="intro row">
		<div class="column grid-12">
			<div class="block">
				<div class="top-sep"></div>

				<div class="splash">
					<h1>Clean</h1>
					<h2>Clean <b>webdesign</b> ideas for your inspiration</h2>
				</div>
			</div>
		</div>
	</div>

	<div class="section">
		<div class="row">
			<div class="column grid-12">
				<div class="block" style="text-align:left;">
					In our quest for creating beautiful web applications, we constantly check others work to refresh our creativity and get inspired, so we decided to share some of the best of our findings.
				</div>
			</div>
		</div>
	</div>

	<div class="section">
		<div class="row">
			{{#inspiration 'inspiration/clean-design.json'}}
				{{#each items}}
				<div class="column grid-6">
					<div class="block" style="">
						<img alt="{{this.name}}" src="{{../IMGbase}}/{{this.name}}.jpg">

						<div class="buttons" style="overflow:hidden;">
							<div style="float:left">
								{{#if this.desc}}
									{{this.desc}}
								{{else}}
									{{this.name}}
								{{/if}}
							</div>
							<div style="float:right;"><a href="{{this.url}}" target="_blank" title="{{this.name}} website" class="button small red">Visit Website</a></div>
						</div>
					</div>
				</div>
				{{/each}}
			{{/inspiration}}
		</div>
	</div>
	
	{{> pagination}}

	

	{{> footer}}
</div>
