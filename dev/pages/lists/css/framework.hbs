	{
		"title" : "awesome css framework list",
		"description" : "Free one page, clean and responsive HTML templates",
		"keywords" : "css, framework, awesome, list",
	}

{{/config}}

{{> header}}

<style>
	.buttons {
		margin-top: 20px;
	}

	.subscription {
		/*margin-top: 100px;*/
		/*background: #ccc;*/
		padding: 20px;
	}

