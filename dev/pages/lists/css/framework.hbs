<div class="container">
	
	<div class="intro row">
		<div class="column grid-12">
			<div class="block">
				<div class="top-sep"></div>

				<div class="splash">
					<h1>Awesome</h1>
					<h2>list of some awesome css frameworks</h2>
				</div>
			</div>
		</div>
	</div>

	<div class="section">
		<div class="row">
			{{#lists 'css/framework.json'}}
				{{#each list.items}}
				<div class="column grid-6">
					<div class="block temp" style="">
						<img style="height: 200px;width:100%;" alt="{{this.description}}" src="{{../list.IMGbase}}/{{this.name}}.jpg">
						
						<div style="font-size:14px; text-align: left;padding:10px;line-height:18px;">{{this.long}}</div>

						<div class="buttons">
							<a href="{{this.webpage}}" target="_blank" title="{{this.description}} website" class="button small red">Home Page</a>
							{{#if this.github}}
							<a href="{{this.github}}" target="_blank" title="{{this.name}} on github" class="button small blue">Github</a>
							{{/if}}
						</div>
					</div>
				</div>
				{{/each}}
			{{/lists}}
		</div>
	</div>

	<div class="section">
		<div class="row">
			
			<div class="column grid-6">
			<div class="block" style="text-align:center;margin-top:50px;height: 170px;">
